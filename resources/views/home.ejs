
<section class="hero py-16">
    <div class="container mx-auto flex items-center justify-between">
        <div class="w-1/3">
            <h6 class="text-lg"><em>Are you in search of fresh vegetables?</em></h6>
            <h1 class="text-6xl font-bold">Don't wait</h1>
            <button class="btn-primary rounded-full px-6 py-4 text-white font-bold mt-4">
                Order now
            </button>
        </div>
        <div class="w-2/3">
            <img src="/img/logo_rm.png" alt="vegetables" class="w-full">
        </div>
    </div>
</section>
<section class="menu container mx-auto py-8">
    <h1 class="text-xl font-bold mb-8">All vegetables</h1>
    <div class="grid grid-cols-4 gap-x-12 gap-y-16">
        <% vegetables.forEach(function(vegetable){ %>
        <!-- <div class="experiment w-64">         -->
        <div class="w-64">
            <img class="h-40 mb-4 mx-auto" src="/img/<%= vegetable.image %>" alt="">
            <div class="text-center ">
                <h2 class="mb-4 text-lg "><%= vegetable.name%></h2>
                <span class="size py-1 px-4 rounded-full uppercase text-xs "><%=vegetable.size%></span>
                <div class="flex items-center justify-around mt-6">
                    <span class="font-bold text-lg">$ <%=vegetable.price%></span>
                    <button data-vegetable="<%= JSON.stringify(vegetable)%>" class="add-to-cart rounded-full py-1 px-6 flex items-center font-bold">
                        <span>+</span>
                        <span class="ml-4">Add</span>
                    </button>
                </div>
            </div>
        </div>
        <% }) %>   
    </div>
</section>